{
  "name": "chancify",
  "version": "0.1.1",
  "description": "a simple api for running javascript functions based upon percentage chance",
  "main": "basic/index.js",
  "scripts": {
    "build": "npm run build:basic && npm run build:wrapper",
    "build:basic": "rm -rf ./basic && mkdir ./basic && rollup -c rollup.basic.js",
    "build:wrapper": "rm -rf ./wrapper && mkdir ./wrapper && rollup -c rollup.wrapper.js",
    "lint": "eslint src/*.js",
    "prepublish": "npm run test && npm run build",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "babel-tape-runner ./src/**/*.test.js | faucet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danmakenoise/chancify.git"
  },
  "keywords": [
    "javascript",
    "chance",
    "percentage",
    "random",
    "functions"
  ],
  "author": "danmakenoise",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/danmakenoise/chancify/issues"
  },
  "homepage": "https://github.com/danmakenoise/chancify#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-tape-runner": "^2.0.1",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "faucet": "0.0.1",
    "flow": "^0.2.3",
    "flow-bin": "^0.52.0",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-flow": "^1.1.1",
    "rollup-plugin-uglify": "^2.0.1",
    "tape": "^4.8.0"
  }
}
